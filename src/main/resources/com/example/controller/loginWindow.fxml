<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<AnchorPane fx:id="dataPane" prefHeight="283.0" prefWidth="438.0" xmlns="http://javafx.com/javafx/16"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.controller.LoginController">
    <Label layoutX="187.0" layoutY="18.0" prefHeight="54.0" prefWidth="105.0" text="войти" textAlignment="CENTER"
           textFill="#3b507b" AnchorPane.leftAnchor="187.0" AnchorPane.rightAnchor="136.0" AnchorPane.topAnchor="18.0">
        <font>
            <Font name="Segoe UI Semibold" size="30.0"/>
        </font>
    </Label>
    <Label layoutX="50.0" layoutY="84.0" text="логин" textFill="#3b507b" AnchorPane.leftAnchor="50.0"
           AnchorPane.rightAnchor="50.0">
        <font>
            <Font name="Segoe UI Semibold" size="20.0"/>
        </font>
    </Label>
    <TextField fx:id="loginText" layoutX="50.0" layoutY="114.0" prefHeight="30.0" promptText="login"
               style="-fx-background-color: linear-gradient(to left, #e9edf5, #ced9ed); -fx-background-radius: 0; -fx-font-style: #3b507b;"
               AnchorPane.leftAnchor="50.0" AnchorPane.rightAnchor="50.0">
        <font>
            <Font name="Segoe UI Semibold" size="14.0"/>
        </font>
    </TextField>
    <Button fx:id="enterButton" layoutX="50.0" layoutY="170.0" mnemonicParsing="false" onAction="#onEnterButtonClick"
            prefHeight="30.0" prefWidth="203.0" style="-fx-background-color: #3b507b; -fx-background-radius: 0;"
            text="войти" textFill="WHITE" AnchorPane.leftAnchor="50.0" AnchorPane.rightAnchor="50.0">
        <font>
            <Font name="Segoe UI Semibold" size="14.0"/>
        </font>
    </Button>
    <CheckBox fx:id="memoryCheck" contentDisplay="RIGHT" layoutX="50.0" layoutY="144.0" mnemonicParsing="false"
              prefHeight="26.0" prefWidth="166.0" text="запомнить меня" textAlignment="CENTER" textFill="#3b507b"
              AnchorPane.leftAnchor="50.0" AnchorPane.rightAnchor="50.0">
        <font>
            <Font name="Segoe UI Semibold" size="14.0"/>
        </font>
    </CheckBox>
    <Label fx:id="errorLabel" alignment="TOP_CENTER" layoutX="50.0" layoutY="233.0" textFill="RED"
           AnchorPane.leftAnchor="50.0" AnchorPane.rightAnchor="50.0">
        <font>
            <Font name="Segoe UI Semibold" size="14.0"/>
        </font>
    </Label>
    <Button fx:id="registrationButton" layoutX="112.0" layoutY="203.0" mnemonicParsing="false"
            onAction="#onRegistrationButtonClick" prefHeight="26.0" prefWidth="203.0"
            style="-fx-background-color: transparent;" text="зарегестрироваться" textFill="#3b507b">
        <font>
            <Font name="Segoe UI Semibold" size="14.0"/>
        </font>
    </Button>
    <ImageView fitHeight="46.0" fitWidth="42.0" layoutX="137.0" layoutY="24.0" pickOnBounds="true" preserveRatio="true"
               AnchorPane.leftAnchor="137.0" AnchorPane.rightAnchor="249.0" AnchorPane.topAnchor="24.0">
        <Image url="@images/other/login.png"/>
    </ImageView>
</AnchorPane>
